<% provide :title, "Home" %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
    </aside>
    <div class="col-md-8">
      <section class="center">
      <%= link_to(t("links.word"),'#', class: "btn btn-lg btn-primary")%>
      <%= link_to(t("links.course"), courses_path, class: "btn btn-lg btn-primary")%>
      </section>
      <h1>Activity Feed</h1>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
  <h1><%= t("layouts.home.welcome") %></h1>
  <h2>
    This is the home page for the
    <a href="http://www.railstutorial.org/">Ruby on Rails</a>
    sample application.
  </h2>
  <%= link_to t("links.sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", alt: "Rails logo"),'http://rubyonrails.org/' %>
<% end %>